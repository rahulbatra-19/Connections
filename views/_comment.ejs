<li id="comment-<%= comment.id %>">
<div>
  <div class="comments-css">
  <img src="<%=comment.user.avatar%>" alt="<%=comment.user.name%>" class="img-avatar" id="img">
  
  <span id="msg-content">
  <span class="bold">
        <%= comment.user.name %> 
      </span>
      <br>
    <%= comment.content %>&emsp; &emsp; &emsp;  
  </span>
    <% if(locals.user&&(locals.user.id==comment.user.id)) { %>
      <small>
        <a href="/comments/destroy/<%= comment.id %>">
          <img width="24" height="24" src="https://img.icons8.com/material-rounded/24/0080ff/filled-trash.png" alt="filled-trash"/>
        </a>
      </small>
    <% } %>
</div>

  <small>
    <div class="reactions-container">
    <% const hasReactions = reactionComment.find(reaction => reaction.likeable._id == comment.id); %>
      <% if (!hasReactions) { %>
        <span class="reaction-count" data-likes="<%= comment.reactions.length %>">
          <%= comment.reactions.length %> 
        </span>
        <a class="toggle-reaction-button like" data-likes="<%= comment.reactions.length %>" data-type="👍🏻"
          href="/reactions/toggle/?id=<%= comment._id %>&type=Comment&reactiontype=👍🏻">
          👍🏻
        </a>
        <a class="toggle-reaction-button love" data-likes="<%= comment.reactions.length %>" data-type="❤️"
          href="/reactions/toggle/?id=<%= comment._id %>&type=Comment&reactiontype=❤️">
          ❤️
        </a>
        <a class="toggle-reaction-button funny" data-likes="<%= comment.reactions.length %>" data-type="🤣"
          href="/reactions/toggle/?id=<%= comment._id %>&type=Comment&reactiontype=🤣">
          🤣
        </a>
        <a class="toggle-reaction-button wow" data-likes="<%= comment.reactions.length %>" data-type="🤩"
          href="/reactions/toggle/?id=<%= comment._id %>&type=Comment&reactiontype=🤩">
          🤩
        </a>
        <a class="toggle-reaction-button sad" data-likes="<%= comment.reactions.length %>" data-type="😢"
          href="/reactions/toggle/?id=<%= comment._id %>&type=Comment&reactiontype=😢">
          😢
        </a>
        <a class="toggle-reaction-button angry" data-likes="<%= comment.reactions.length %>" data-type="😡"
          href="/reactions/toggle/?id=<%= comment._id %>&type=Comment&reactiontype=😡">
          😡
        </a>
      <% } else { %>
        <span class="reaction-count" data-likes="<%= comment.reactions.length %>">
          <%= comment.reactions.length %> 
        </span>
          <a class="toggle-reaction-button delete" 
            href="/reactions/toggle/?id=<%= comment._id %>&type=Comment&reactiontype=<%= hasReactions.type %>">
            <%= hasReactions.type %>
          </a>
      <% } %>
    </div>
  </small>
</div>
</li>